{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["esNext", "dom"],
    "emitDecoratorMetadata": true,
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "sanitizer",
    "src/**/**-css.js"
  ]
}
